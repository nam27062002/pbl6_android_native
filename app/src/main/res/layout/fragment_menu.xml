<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/blue_light"
    android:paddingBottom="60dp"
    tools:context=".MenuFragment">
    <LinearLayout
        android:id="@+id/frag"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="horizontal"
            android:background="@drawable/rectangle_8"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/avatar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/avatar" />
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/name"
                        android:textAppearance="@style/name"
                        android:layout_marginStart="30dp"
                        app:layout_constraintStart_toEndOf="@+id/avatar"
                        app:layout_constraintTop_toBottomOf="@+id/top"
                        tools:ignore="MissingConstraints" />

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/type_m"
                        android:textAppearance="@style/type_m"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="5dp"
                        tools:ignore="MissingConstraints" />
                </LinearLayout>
                <Button
                    android:id="@+id/button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/accessory"
                    tools:ignore="MissingConstraints,RtlSymmetry" />
            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/ssnpp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/round_border"
            android:orientation="vertical"
            android:elevation="10dp"

            android:layout_marginTop="23dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:paddingHorizontal="15dp"
            >

            <FrameLayout
                android:gravity="center"
                android:id="@+id/set"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                tools:ignore="MissingConstraints">
                <LinearLayout
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/imgset"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:background="@drawable/settings"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/txtset"
                        tools:ignore="MissingConstraints" />

                    <TextView
                        android:id="@+id/txtset"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/setting"
                        android:textAppearance="@style/txt_menu"
                        android:layout_marginStart="10dp"
                        />
                </LinearLayout>


                <Button
                    android:id="@+id/btset"
                    android:layout_width="10dp"
                    android:layout_height="20dp"
                    android:background="@drawable/arrow_right"
                    android:layout_gravity="right|center"
                    tools:ignore="MissingConstraints" />
                <View
                    android:layout_gravity="bottom"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#3C3C434D"
                    android:layout_marginStart="40dp"
                    />
            </FrameLayout>

            <FrameLayout
                android:gravity="center"
                android:id="@+id/sup"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                >
                <LinearLayout
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/imgsup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:background="@drawable/message"
                        tools:ignore="MissingConstraints" />

                    <TextView
                        android:id="@+id/txtsup"
                        android:layout_width="191.84dp"
                        android:layout_height="wrap_content"
                        android:text="@string/support"
                        android:textAppearance="@style/txt_menu"

                        android:layout_marginStart="10dp"
                        />
                </LinearLayout>
                <Button
                    android:layout_gravity="right|center"
                    android:id="@+id/btsup"
                    android:layout_width="10dp"
                    android:layout_height="20dp"
                    android:background="@drawable/arrow_right"
                    />
                <View
                    android:layout_gravity="bottom"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#3C3C434D"
                    android:layout_marginStart="40dp"
                    />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/noti"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                tools:ignore="MissingConstraints">
                <LinearLayout
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/imgnoti"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/notification"
                        tools:ignore="MissingConstraints" />

                    <TextView
                        android:id="@+id/txtnoti"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/notification"
                        android:layout_marginStart="10dp"
                        android:textAppearance="@style/txt_menu" />
                </LinearLayout>


                <Button
                    android:layout_gravity="right|center"
                    android:id="@+id/btnoti"
                    android:layout_width="10dp"
                    android:layout_height="20dp"
                    android:background="@drawable/arrow_right"
                    />
                <View
                    android:layout_gravity="bottom"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#3C3C434D"
                    android:layout_marginStart="40dp"
                    />
            </FrameLayout>

            <FrameLayout
                android:gravity="center"
                android:id="@+id/pay"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal"
                tools:ignore="MissingConstraints">
                <LinearLayout
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/imgpay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/credit_card" />

                    <TextView
                        android:id="@+id/txtpay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/pay"
                        android:textAppearance="@style/txt_menu"

                        android:layout_marginStart="10dp" />
                </LinearLayout>


                <Button
                    android:layout_gravity="right|center_vertical"
                    android:id="@+id/btpay"
                    android:layout_width="10dp"
                    android:layout_height="20dp"
                    android:background="@drawable/arrow_right"

                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#3C3C434D"
                    android:layout_marginStart="40dp"
                    android:layout_gravity="bottom"
                    />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/pro"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                tools:ignore="MissingConstraints">
                <LinearLayout
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/imgpro"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/code" />

                    <TextView
                        android:id="@+id/txtpro"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/promo_code"
                        android:textAppearance="@style/txt_menu"

                        android:layout_marginStart="10dp" />
                </LinearLayout>


                <Button
                    android:id="@+id/btpro"
                    android:layout_width="10dp"
                    android:layout_height="20dp"
                    android:background="@drawable/arrow_right"
                    android:layout_gravity="right|center"
                    />
            </FrameLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/wsa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            app:layout_constraintTop_toBottomOf="@+id/ssnpp"
            app:layout_constraintBottom_toTopOf="@+id/logout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="20dp"
            android:orientation="vertical"
            android:background="@drawable/round_border"
            android:elevation="10dp"
            tools:ignore="MissingConstraints"
            android:layout_marginHorizontal="25dp"
            >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/work"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                >

                <TextView
                    android:id="@+id/txtwork"
                    android:layout_width="226dp"
                    android:layout_height="wrap_content"
                    android:text="@string/work"
                    android:textAppearance="@style/txt_menu"

                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="71dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    />

                <Button
                    android:id="@+id/btwork"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/icon_share"
                    android:layout_marginStart="71dp"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@id/txtwork"
                    app:layout_constraintEnd_toEndOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#3C3C434D"
                android:layout_marginStart="16dp"
                />
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/share_a"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                >

                <TextView
                    android:id="@+id/txtshare_a"
                    android:layout_width="226dp"
                    android:layout_height="wrap_content"
                    android:text="@string/share_a"
                    android:textAppearance="@style/txt_menu"

                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="71dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    />

                <Button
                    android:id="@+id/btshare_a"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/icon_share"
                    android:layout_marginStart="71dp"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@id/txtshare_a"
                    app:layout_constraintEnd_toEndOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#3C3C434D"
                android:layout_marginStart="16dp"
                />
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/about"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                >

                <TextView
                    android:id="@+id/txtabout"
                    android:layout_width="194dp"
                    android:layout_height="wrap_content"
                    android:text="@string/about"
                    android:textAppearance="@style/txt_menu"

                    android:layout_marginStart="16dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    />
                <TextView
                    android:id="@+id/txtversion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/version"
                    android:text="@string/version"
                    android:layout_marginStart="0dp"
                    app:layout_constraintStart_toEndOf="@id/txtabout"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    >

                </TextView>

                <Button
                    android:id="@+id/btabout"
                    android:layout_width="10dp"
                    android:layout_height="20dp"
                    android:background="@drawable/arrow_right"
                    android:layout_marginStart="28dp"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@id/txtversion"
                    app:layout_constraintEnd_toEndOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

        <Button
            android:id="@+id/logout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/logout"

            android:elevation="10dp"
            android:letterSpacing="0.01"
            android:text="Log out"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="25dp"
            app:layout_constraintTop_toBottomOf="@+id/wsa"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/task_menu"

            />
    </LinearLayout>


</LinearLayout>