<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_light"
    android:theme="@android:style/Theme.Light"
    tools:context=".VerifyAccount">

    <TextView
        android:id="@+id/text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RideWizard"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="10dp"
        android:layout_marginTop="20dp" />


    <ImageView
        android:id="@+id/circleImageView"
        android:layout_width="36dp"
        android:layout_height="36dp"
        app:layout_constraintTop_toTopOf="@id/text_title"
        app:layout_constraintBottom_toBottomOf="@id/text_title"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="20dp"
        android:src="@drawable/circle_white"
        android:background="@drawable/circle_white"
        android:layout_gravity="center"
        tools:ignore="MissingConstraints" />

    <Button
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/circleImageView"
        app:layout_constraintBottom_toBottomOf="@id/circleImageView"
        app:layout_constraintLeft_toLeftOf="@id/circleImageView"
        app:layout_constraintRight_toRightOf="@id/circleImageView"
        android:background="@drawable/transparent_background"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_arrow"
        app:layout_constraintTop_toTopOf="@id/circleImageView"
        app:layout_constraintBottom_toBottomOf="@id/circleImageView"
        app:layout_constraintLeft_toLeftOf="@id/circleImageView"
        app:layout_constraintRight_toRightOf="@id/circleImageView"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/text_notice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_title"
        android:layout_marginTop="100dp"
        android:text="The code has been sent to\n 0899 227 417 by SMS"
        android:layout_columnWeight="1"
        android:gravity="center"
        android:textSize="15dp"
        android:textColor="@color/grey2"
        android:rowCount="0"
        android:columnCount="0"
        android:layout_rowWeight="1"
        tools:ignore="InvalidId,MissingConstraints" />
    <TextView
        android:id="@+id/num1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textSize="36dp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="@color/deep_green"
        app:layout_constraintBottom_toTopOf="@id/line1"
        app:layout_constraintLeft_toLeftOf="@id/line1"
        app:layout_constraintRight_toRightOf="@id/line1"
        android:layout_marginBottom="5dp"
        tools:ignore="MissingConstraints" />
    <View
        android:id="@+id/line1"
        android:layout_width="35dp"
        android:layout_height="1dp"
        android:layout_marginTop="120dp"
        android:background="@color/deep_green"
        app:layout_constraintTop_toBottomOf="@id/text_notice"
        app:layout_constraintLeft_toLeftOf="@id/text_notice"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/num2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textSize="36dp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="@color/deep_green"
        app:layout_constraintBottom_toTopOf="@id/line2"
        app:layout_constraintLeft_toLeftOf="@id/line2"
        app:layout_constraintRight_toRightOf="@id/line2"
        android:layout_marginBottom="5dp"
        tools:ignore="MissingConstraints" />
    <View
        android:id="@+id/line2"
        android:layout_width="35dp"
        android:layout_height="1dp"
        android:background="@color/deep_green"
        app:layout_constraintTop_toTopOf="@id/line1"
        app:layout_constraintLeft_toRightOf="@id/line1"
        app:layout_constraintRight_toLeftOf="@id/line3"
        tools:ignore="MissingConstraints" />
    <View
        android:id="@+id/line3"
        android:layout_width="35dp"
        android:layout_height="1dp"
        android:background="@color/deep_green"
        app:layout_constraintTop_toTopOf="@id/line1"
        app:layout_constraintTop_toBottomOf="@id/text_notice"
        app:layout_constraintLeft_toRightOf="@id/line2"
        app:layout_constraintRight_toLeftOf="@id/line4"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/num3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textSize="36dp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="@color/deep_green"
        app:layout_constraintBottom_toTopOf="@id/line3"
        app:layout_constraintLeft_toLeftOf="@id/line3"
        app:layout_constraintRight_toRightOf="@id/line3"
        android:layout_marginBottom="5dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/num4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textSize="36dp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="@color/deep_green"
        app:layout_constraintBottom_toTopOf="@id/line4"
        app:layout_constraintLeft_toLeftOf="@id/line4"
        app:layout_constraintRight_toRightOf="@id/line4"
        android:layout_marginBottom="5dp"
        tools:ignore="MissingConstraints" />
    <View
        android:id="@+id/line4"
        android:layout_width="35dp"
        android:layout_height="1dp"
        android:background="@color/deep_green"
        app:layout_constraintTop_toTopOf="@id/line1"
        app:layout_constraintTop_toBottomOf="@id/text_notice"
        app:layout_constraintRight_toRightOf="@id/text_notice"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/deep_green"
        android:text="Enter code: (11:40)"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line4"
        android:layout_marginTop="20dp"
        android:textSize="12dp"
        tools:ignore="MissingConstraints" />
    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:rowCount="4"
        android:columnCount="3"
        app:layout_constraintHeight_percent="0.4"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_gravity="center"
        tools:ignore="MissingConstraints">
        <Button
            android:id="@+id/button1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="1"
            android:layout_row="0"
            android:textSize="36dp"
            android:textStyle="bold"
            android:layout_column="0"
            android:background="@drawable/button_keyboard_background"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"/>
        <Button
            android:id="@+id/button2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="2"
            android:layout_row="0"
            android:textSize="36dp"
            android:textStyle="bold"
            android:layout_column="1"
            android:background="@drawable/button_keyboard_background"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"/>
        <Button
            android:id="@+id/button3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="3"
            android:layout_row="0"
            android:textSize="36dp"
            android:textStyle="bold"
            android:layout_column="2"
            android:background="@drawable/button_keyboard_background"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"/>
        <Button
            android:id="@+id/button4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="4"
            android:layout_row="1"
            android:textSize="36dp"
            android:textStyle="bold"
            android:layout_column="0"
            android:background="@drawable/button_keyboard_background"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"/>
        <Button
            android:id="@+id/button5"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="5"
            android:layout_row="1"
            android:textSize="36dp"
            android:textStyle="bold"
            android:layout_column="1"
            android:background="@drawable/button_keyboard_background"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"/>
        <Button
            android:id="@+id/button6"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="6"
            android:layout_row="1"
            android:textSize="36dp"
            android:textStyle="bold"
            android:layout_column="2"
            android:background="@drawable/button_keyboard_background"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"/>
        <Button
            android:id="@+id/button7"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="7"
            android:layout_row="2"
            android:textSize="36dp"
            android:textStyle="bold"
            android:layout_column="0"
            android:background="@drawable/button_keyboard_background"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"/>
        <Button
            android:id="@+id/button8"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="8"
            android:layout_row="2"
            android:textSize="36dp"
            android:textStyle="bold"
            android:layout_column="1"
            android:background="@drawable/button_keyboard_background"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"/>
        <Button
            android:id="@+id/button9"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="9"
            android:layout_row="2"
            android:textSize="36dp"
            android:textStyle="bold"
            android:layout_column="2"
            android:background="@drawable/button_keyboard_background"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"/>
        <Button
            android:id="@+id/button0"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="0"
            android:layout_row="3"
            android:textSize="36dp"
            android:textStyle="bold"
            android:layout_column="1"
            android:background="@drawable/button_keyboard_background"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"/>
        <ImageButton
            android:id="@+id/buttonCheck"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="3"
            android:layout_column="0"
            app:srcCompat="@drawable/ic_check"
            android:layout_columnWeight="1"
            android:background="@drawable/button_keyboard_background"
            android:layout_rowWeight="1"/>
        <ImageButton
            android:id="@+id/buttonDel"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="3"
            android:layout_column="2"
            app:srcCompat="@drawable/icon_del"
            android:layout_columnWeight="1"
            android:background="@drawable/button_keyboard_background"
            android:layout_rowWeight="1"/>
    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>